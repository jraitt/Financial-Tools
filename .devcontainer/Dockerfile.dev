FROM node:20-slim

# Install dependencies for better-sqlite3 native compilation
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Create non-root user (node user already exists in node image)
RUN mkdir -p /workspace/data && chown -R node:node /workspace

# Copy package files first for better caching
COPY --chown=node:node package*.json ./

USER node

# Install dependencies (will be overridden by anonymous volume in docker-compose)
RUN npm install

# Default command for development
CMD ["npm", "run", "dev"]
